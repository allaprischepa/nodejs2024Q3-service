generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  login     String    @unique
  password  String
  version   Int       @default(1)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Artist {
  id      String @id  @default(uuid())
  name    String
  grammy  Boolean

  tracks  Track[]
  albums  Album[]
}

model Track {
  id        String  @id @default(uuid())
  name      String
  artistId  String?
  albumId   String?
  duration  Int

  artist    Artist? @relation(fields: [artistId], references: [id])
  album     Album?  @relation(fields: [albumId], references: [id])
}

model Album {
  id        String  @id @default(uuid())
  name      String
  year      Int
  artistId  String?

  artist    Artist? @relation(fields: [artistId], references: [id])
  tracks    Track[]
}

model Favorites {
  id      String  @id @default(uuid())
  userId  String
  artists String[]
  albums  String[]
  tracks  String[]
}
